    font-family: Arial, Helvetica, sans-serif;
}

.dropdown_button{
    background-color: #24ff54;
    color:rgb(214, 105, 105);
    border:none;
    outline:none;
    font-size:30px;
    cursor:pointer;
    padding:14px 60px;
    box-shadow: 0px 0px 30px 1px #24baff;
}


.dropdown_list{
    background-color: #24ff54;
    width:200px;
    box-shadow: 0px 0px 30px 1px #0c2b3a;
    text-align: center;
    text-transform: uppercase;
    box-shadow: 0 0 30px black;
    display:none;
    position:absolute;
}

p{
    border:5px solid blue;
.dropdown_list a{
    display:block;
    color:rgb(77, 17, 17);    
    text-decoration:none;
    padding:20px;
    font-size: 20px;
}


.dropdown_list a:hover{
    background-color: #bf9fe9;
}


/* FOr dropdown Effect */
.dropdown:hover .dropdown_list{
    display:block;
} 







